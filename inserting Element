#include<iostream>
using namespace std;
int insertElement(int arr[], int n, int x, int cap){
    if(cap==n){
        return n;
    }
    int pos;
    cout<<"enter position to add number: ";
    cin>>pos;
    int index= pos-1;
    for(int i = n-1; i>=index; i--){
        arr[i+1] = arr[i];
    }
    arr[index] = x;
    for(int i=0;i<n;i++){
        cout<<arr[i]<< " ";
    }
    return (n+1);
}
int main(){
    int n;
    cout<<"enter limit of array: ";
    cin>>n;
    int arr[n]={1,2,3,4};
    int x;
    cout<<"enter element to add: ";
    cin>>x;
    int cap = 0;
    for(int i = 0; i<n; i++){
        if(arr[i]!=0){
            cap++;
        }
    }
    cout<<insertElement(arr, n, x, cap);
    return 0;
}
